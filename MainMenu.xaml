<Page x:Class="Project_MISiS.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_MISiS"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1200"
      Title="MainMenuPage">

    <Grid Name="MenuGrid" Background="White">
        <Image Name="GameLogo" Height="150" Width="600" Margin="0 0 0 450" Visibility="Hidden"/>
        <TextBlock Name="PlaceholderLogoTextBlock" Height="100" Width="600" Margin="0 0 0 420" 
                   Text="ECO PROJECT" TextAlignment="Center" FontFamily="Hey Haters" FontSize="90"/>
        <Button Name="StartGameButton" Height="50" Width="300" Content="Начать игру" Margin="0 100 0 150" FontSize="20" Click="StartGameButton_Click" />
        <Button Name="HelpButton" Height="50" Width="300" Content="Помощь" Margin="0 100 0 0" FontSize="20" Click="HelpButton_OnClick"/>
        <Button Name="ExitButton" Height="50" Width="300" Content="Выход" Margin="0 250 0 0" FontSize="20" Click="ExitButton_OnClick"/>
        <TextBlock Name="DeveloperInfoTextBlock" Height="40" Width="600" Text="2021 © Dmitry Rybalko, Darya Mitkina"
                   TextAlignment="Center" FontSize="16" TextWrapping="Wrap" Margin="0 650 0 0" />
    </Grid>
</Page>
